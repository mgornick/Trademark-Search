<div id='bing'>
  <h3>Bing</h3>
  <%= link_to "Bing Search Page", :controller => :trademarks, :action => :show, :id => @trademark, :search_page => 'bing', :filename => "#{@trademark.term}_bing.pdf" %><br />
  
  <p><strong>Organic Links</strong></p>
  <ol>
  <% index = 0 %>
  <% @trademark.search_results.each do |result| %>
    <% if result.search_engine == "Bing" %>
      <li>
        <%= link_to "#{@trademark.term}_bing_OL#{index}.pdf", :controller => :search_results, :action => :show, :id => result, :filename => "#{@trademark.term}_bing_OL#{index}.pdf" %><br />
        <small> <%= result.url %></small>
      </li>
      <% index = index + 1 %>
    <% end %>  
    
  <% end %>
  </ol>
  
  <p><strong>Sponsored Links</strong></p>
  <ol>
  <% index = 0 %>
  <% @trademark.search_ads.each do |ad| %>
    <% if ad.search_engine == "Bing" %>
      <li>
        <%= link_to "#{@trademark.term}_bing_OL#{index}.pdf", :controller => :search_ads, :action => :show, :id => ad, :filename => "#{@trademark.term}_bing_OL#{index}.pdf" %><br />
        <small> <%= ad.url %></small>
        <small> <%= ad.location %></small>
      </li>
      <% index = index + 1 %>
    <% end %>  
    
  <% end %>
  </ol>
</div>